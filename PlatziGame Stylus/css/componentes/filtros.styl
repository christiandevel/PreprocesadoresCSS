.encabezado--con-filtros
	contenedor()
	h2 
		margin-top: 10px
		font-size: 50px
		titulos(Fuente2)
	.filtros
		width: 250px
		height 75px
		padding: 20px
		margin-left: auto
		caja-sombra()
		span 
			text-transform: uppercase
		a
			margin-left: 20px
			font-size: 25px
			color: color-primario
.contenido
	margin-bottom: 40px
	justify-content: space-evenly
	contenedor()

.caja
	max-width 400px
	caja-sombra()
	&__contenido
		padding: 20px
		background-color: color-claro
		span
			color: color-secundario
			titulos(Fuente2)
		h3
			text-transform: uppercase
			font-weight: normal
			font-family: Fuente2